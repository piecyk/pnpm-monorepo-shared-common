{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "tsBuildInfoFile": "node_modules/.cache/.tsbuildinfo",
    "paths": {
      "common/*": ["../../web-common/src/*"],
    }
  },
  "include": ["src"],
}
